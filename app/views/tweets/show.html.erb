<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @tweet.user.username %>
</p>

<p>
  <strong>Content:</strong>
  <%= @tweet.content %>
</p>
<% if @tweet.user == current_user %>
	<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
	<%= link_to 'Back', tweets_path %>
	<%= link_to 'Delete', @tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
